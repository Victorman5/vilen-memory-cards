<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <EditText
        android:id="@+id/dialogEditTextCardTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="text"
        android:hint="@string/term"
        android:nextFocusDown="@id/dialogEditTextCardDefinition" />

    <EditText
        android:id="@+id/dialogEditTextCardDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogEditTextCardTerm"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="text"
        android:hint="@string/definition" />

</androidx.constraintlayout.widget.ConstraintLayout>